{
  "manifest_version": 3,
  "name": "RMP Helper â€“ Schedule Booster",
  "version": "0.1.0",
  "description": "Overlays RateMyProfessors ratings on your school's Schedule Builder and suggests better-rated professors.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.ratemyprofessors.com/*", "https://fonts.googleapis.com/*", "https://fonts.gstatic.com/*"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "content/schedule.js",
        "shared/storage.js",
        "shared/nameMatcher.js",
        "shared/rmpClient.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_title": "RMP Helper",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/loader.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ]
}
