{
  "manifest_version": 3,
  "name": "ZooReviews",
  "version": "0.2.0",
  "description": "Overlays RateMyProfessors ratings on your school's Schedule Builder with Liquid Glass UI, Omni-Search (Cmd/Ctrl+K), and inline badges.",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://www.ratemyprofessors.com/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "content/schedule.js",
        "content/scheduleParser.js",
        "content/omniSearch.js",
        "content/spireInjector.js",
        "shared/storage.js",
        "shared/nameMatcher.js",
        "shared/rmpClient.js",
        "lib/fuse.min.mjs",
        "data/professors.json",
        "styles/liquidGlass.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_title": "ZooReviews"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/loader.js"
      ],
      "css": [
        "styles/overlay.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
